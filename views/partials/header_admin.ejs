    <style>
        /* ========================================================== */
        /* SEMUA GAYA CSS UTAMA UNTUK DASHBOARD DAN HALAMAN PENDUDUK DISATUKAN DI SINI */
        /* ========================================================== */

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa; /* Consistent background color for the body */
            min-height: 100vh;
        }

        /* Header (Top Navbar) Styles */
        .header {
            background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%);
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            /* Uncomment these if you want a fixed header */
            /* position: fixed; */
            /* top: 0; */
            /* width: 100%; */
            /* z-index: 1000; */
        }

        .header h1 {
            font-size: 28px;
            font-weight: 700;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .header-icons {
            display: flex;
            gap: 15px;
        }

        .header-icon {
            padding: 8px;
            background: rgba(255,255,255,0.15);
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s;
        }

        .header-icon:hover {
            background: rgba(255,255,255,0.25);
        }

        .admin-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .admin-avatar {
            width: 35px;
            height: 35px;
            background: #2563eb;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

        /* Container for Sidebar and Main Content */
        .container {
            display: flex;
            /* If header is NOT fixed, remove padding-top from body and use min-height 100vh */
            /* If header IS fixed, body needs padding-top: 70px; and this can be min-height: calc(100vh - 70px) */
            min-height: calc(100vh); 
        }

        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            background: linear-gradient(180deg, #1e293b 0%, #1e40af 100%);
            color: white;
            padding: 0;
            overflow-y: auto;
            box-shadow: 4px 0 20px rgba(0,0,0,0.1);
        }

        .sidebar-header {
            padding: 25px;
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar-logo {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .logo-icon {
            width: 45px;
            height: 45px;
            background: #2563eb;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 18px;
        }

        .sidebar-title {
            font-size: 16px;
            font-weight: 600;
            line-height: 1.3;
        }

        .sidebar-subtitle {
            font-size: 12px;
            opacity: 0.8;
            margin-top: 2px;
        }

        .menu-section {
            padding: 20px 0;
        }

        .menu-title {
            padding: 0 25px 15px;
            font-size: 11px;
            font-weight: 600;
            color: #a5b4fc;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .menu-item {
            padding: 12px 25px;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 12px;
            border-left: 3px solid transparent;
        }

        .menu-item:hover {
            background: rgba(59, 130, 246, 0.15);
            border-left-color: #3b82f6;
        }

        .menu-item.active {
            background: rgba(59, 130, 246, 0.25);
            border-left-color: #3b82f6;
            color: #fff; /* Keep white for active for better contrast with dark sidebar */
        }

        .menu-item a {
            text-decoration: none;
            color: inherit; /* Inherit color from parent (.menu-item or .menu-item.active) */
            display: flex; /* Make the link occupy the full clickable area */
            align-items: center;
            flex-grow: 1; /* Allow the link to take available space */
        }
        
        .menu-item a span {
            flex-grow: 1; /* Allow the text inside the span to grow */
        }


        .menu-icon {
            width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Main Content Styles */
        .main-content {
            flex: 1;
            padding: 30px;
            background: white; /* Background for main content area */
        }

        .page-header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .page-title {
            font-size: 24px;
            font-weight: 700;
            color: #1e3a8a;
            margin-bottom: 8px;
        }

        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #64748b;
            font-size: 14px;
        }

        .update-alert {
            background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
            color: white;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 25px;
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.2);
        }

        .update-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .update-text {
            font-size: 14px;
            line-height: 1.6;
            opacity: 0.95;
            margin-bottom: 15px;
        }

        .update-buttons {
            display: flex;
            gap: 12px;
        }

        /* General Button Styles for dashboard stats/buttons */
        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center; /* Centered content */
            gap: 6px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            color: white;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #3b82f6 0%, #1e3a8a 100%);
        }

        .btn-secondary {
            background: rgba(30, 58, 138, 0.2);
            color: white; /* Changed to white for consistency with original sidebar buttons */
        }

        .btn-secondary:hover {
            background: rgba(30, 58, 138, 0.3);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            overflow: hidden;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%);
        }

        .stat-card.purple::before,
        .stat-card.blue::before,
        .stat-card.green::before,
        .stat-card.red::before,
        .stat-card.gray::before,
        .stat-card.orange::before {
            background: linear-gradient(90deg, #1e3a8a 0%, #3b82f6 100%); /* Unified color for all stat card tops */
        }

        .stat-number {
            font-size: 36px;
            font-weight: 700;
            color: #1e3a8a;
            margin-bottom: 8px;
        }

        .stat-label {
            font-size: 16px;
            color: #64748b;
            margin-bottom: 15px;
        }

        .stat-button {
            background: rgba(59, 130, 246, 0.1);
            color: #1e3a8a;
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .stat-button:hover {
            background: rgba(59, 130, 246, 0.2);
        }

        .sidebar-section {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }

        .sidebar-section-title {
            font-size: 18px;
            font-weight: 600;
            color: #1e3a8a;
            margin-bottom: 20px;
        }

        .info-section {
            margin-bottom: 25px;
        }

        .info-title {
            font-size: 16px;
            font-weight: 600;
            color: #3b82f6;
            margin-bottom: 10px;
        }

        .info-text {
            font-size: 14px;
            line-height: 1.6;
            color: #64748b;
            margin-bottom: 15px;
        }

        .info-link {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 500;
        }

        .info-link:hover {
            text-decoration: underline;
        }

        .main-grid {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 30px;
        }

        /* --- Specific styles for Penduduk Form and Table --- */
        .form-table-container {
            background: white;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin-bottom: 2.5rem;
        }

        .form-table-container h3 {
            color: #333;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            font-weight: 700;
            text-align: center;
        }

        /* Form Group (label + input/select/textarea) */
        .form-group {
            margin-bottom: 1rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: #333;
            font-size: 0.95rem;
        }

        .form-group input[type="text"],
        .form-group input[type="date"],
        .form-group textarea,
        .form-group select { 
            width: 100%;
            padding: 0.8rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
            background-color: white;
            box-sizing: border-box; /* Include padding and border in element's total width/height */
        }

        .form-group input[type="text"]:focus,
        .form-group input[type="date"]:focus,
        .form-group textarea:focus,
        .form-group select:focus { 
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 80px;
        }

        .form-group.checkbox {
            display: flex;
            align-items: center;
            margin-top: 1rem;
        }

        .form-group.checkbox input[type="checkbox"] {
            width: auto;
            margin-right: 0.5rem;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
            justify-content: flex-end; /* Align buttons to the right */
        }

        /* Specific Button Styles for Penduduk (edit/delete) */
        /* These extend the general .btn styles */
        .btn-edit {
            background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%); /* Orange/Yellow for Edit */
            box-shadow: 0 5px 15px rgba(243, 156, 18, 0.2);
        }
        .btn-edit:hover {
            background: linear-gradient(135deg, #e67e22 0%, #f39c12 100%);
            box-shadow: 0 8px 20px rgba(243, 156, 18, 0.3);
        }

        .btn-delete {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); /* Red for Delete */
            box-shadow: 0 5px 15px rgba(231, 76, 60, 0.2);
        }
        .btn-delete:hover {
            background: linear-gradient(135deg, #c0392b 0%, #e74c3c 100%);
            box-shadow: 0 8px 20px rgba(231, 76, 60, 0.3);
        }

        /* Table Styles (Penduduk) */
        .table-responsive {
            overflow-x: auto; /* Enable horizontal scrolling on small screens */
            margin-top: 2rem;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .penduduk-table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 10px;
            overflow: hidden; /* Ensures border-radius applies to table content */
        }

        .penduduk-table th,
        .penduduk-table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .penduduk-table th {
            background: #f0f2f5; /* Lighter background for headers */
            color: #333;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .penduduk-table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .penduduk-table td {
            font-size: 0.9rem;
            color: #555;
            vertical-align: middle;
        }

        .penduduk-table td:last-child {
            white-space: nowrap; /* Prevent buttons from wrapping */
        }
        .penduduk-table td button {
            margin-right: 5px; /* Space between buttons */
            padding: 6px 10px; /* Smaller padding for table buttons */
            font-size: 0.8rem;
            border-radius: 5px; /* Smaller border-radius for table buttons */
        }

        /* Error/Message styles */
        .error-message, .info-message {
            text-align: center;
            padding: 15px;
            border-radius: 8px;
            margin-top: 20px;
            font-weight: 500;
        }
        .error-message {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .info-message {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }


        /* Responsive Adjustments (General) */
        @media (max-width: 1200px) {
            .main-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .header {
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }
            .header-right {
                width: 100%;
                justify-content: space-between;
            }

            .container {
                flex-direction: column;
            }
            
            .sidebar {
                width: 100%;
                height: auto;
                order: 2; /* Puts sidebar below main content on small screens */
            }
            
            .main-content {
                padding: 20px;
                order: 1; /* Puts main content above sidebar on small screens */
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }

            /* Responsive for form/table */
            .form-table-container {
                padding: 1.5rem;
            }

            .form-table-container h3 {
                font-size: 1.3rem;
            }

            .form-actions {
                flex-direction: column;
                gap: 0.8rem;
            }

            .form-actions .btn {
                width: 100%;
            }

            .penduduk-table th,
            .penduduk-table td {
                padding: 8px 10px;
                font-size: 0.85rem;
            }
            .penduduk-table td button {
                padding: 4px 8px;
                font-size: 0.75rem;
            }
        }
    </style>
</head>
